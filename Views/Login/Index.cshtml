<main>
    <h2>LOGIN</h2>
    <br>
    <br>
    <div id="signin">
        <form method="POST" action='@Url.Action("Index", "Login")'> 
            <div>
                <br>
                <label for="email">E-MAIL</label>
                <br>
                <br>
                <input id="email" type="email" name="email"/>
            </div>

            <div>
                <br>
                <label for="senha">SENHA</label>
                <br> 
                <br> 
                <input id="senha" type="text" name="senha" maxlength="20" minlength="8"/>
            </div>
            <a href='@Url.Action("Index", "Cadastro")'>QUERO ME CADASTRAR</a>
            <br>
            <input type="submit"  value="ENTRAR"/> 
        </form>
    </div>
</main> 

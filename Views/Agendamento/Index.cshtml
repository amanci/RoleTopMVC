@model RoleTopMVC.ViewModels.AgendamentoViewModel

<main>
    <h2>BEM VINDO </h2>
    <h2 style="color: #ffea00;">@Model.NomeUsuario</h2>
    <br>
    <h2>AGENDAMENTO</h2>
    <br>
    <br>
    <div id="signup">
        <form method="POST" action='@Url.Action("Agendar", "Agendamento")'>
            <div>
                <label for="nome">NOME COMPLETO</label>
                <br>
                <br>
                <input id="nome" type="text" maxlength="20" minlength="3" name="nome" value="@Model.Cliente.Nome" readonly/>
            </div>
            
            <div>
                <br>
                <label for="cpf-cnpj">CPF/CNPJ</label>
                <br>
                <br>
                <input id="cpf-cnpj" type="text" name="cpf-cnpj" value="@Model.Cliente.CpfCnpj" readonly/>
            </div>

            <div>
                <br>
                <label for="telefone">TELEFONE</label>
                <br>
                <br>
                <input id="telefone" type="text" name="telefone" value="@Model.Cliente.Telefone" readonly/>
            </div>
            
            <div>
                <br>
                <label for="endereco">ENDEREÇO</label>
                <br>
                <br>
                <input id="endereco" type="text" name="endereco" value="@Model.Cliente.Endereco" readonly/>
            </div>

            <div>
                <br>
                <label for="email">E-MAIL</label>
                <br>
                <br>
                <input id="email" type="email" name="email" value="@Model.Cliente.Email" readonly/>
            </div>
            
            <div>
                <label for="name-event">NOME DO EVENTO</label>
                <br>
                <br>
                <input id="name-event" type="text" maxlength="20" minlength="3" name="nome-evento"/>
            </div>

            <div>
                <br>
                <label for="date-event">DATA</label>
                <br>
                <br>
                <input id="date-event" type="date" name="data-evento" />
            </div>

            <div id="services">
                <div id = "sound">
                    <br>
                    <label for="sound">SOM</label>
                    <br>
                    <BR>
                    <input type="radio" name="som" checked="checked" value="true"/> <p>SIM</p>
                    <br>
                    <input type="radio" name="som" checked="checked" value="false"/> <p>NÃO</p>
                </div>

                <div id = "lighting">
                    <br>
                    <label for="lighting">ILUMINAÇÃO</label>
                    <br>
                    <BR>
                    <input type="radio" name="iluminacao" checked="checked" value="true"/> <p>SIM</p>
                    <br>
                    <input type="radio" name="iluminacao" checked="checked" value="false"/> <p>NÃO</p>
                </div>
            </div>
            
            <div>
                <br>
                <label for ="descricao">DESCRIÇÃO</label>
                <br>
                <br>
                <textarea cols=40 id="descricao" name="descricao" rows="10" name="descricao" maxlength="500" wrap="hard"> </textarea>
            </div>

            <input type="submit" value="AGENDAR"/> 
        </form>
    </div>
</main>